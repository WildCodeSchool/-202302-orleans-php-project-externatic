{% extends 'base.html.twig' %}

{% block title %}Index || Consultant
{% endblock %}

{% block body %}
    <section class="container">
        <h1 class="text-primary fw-bold text-uppercase d-flex justify-content-center my-5">Les consultants</h1>

        <table class="table">
            <thead>
                <tr>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Id</th>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Prénom</th>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Nom</th>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Secteur</th>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Spécialisation</th>
                    <th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Linkedin</th>
                </tr>
            </thead>
            <tbody>
                {% for consultant in consultants %}
                    <tr>
                        <td class="fs-5">{{ consultant.id }}</td>
                        <td class="fs-5">{{ consultant.firstname }}</td>
                        <td class="fs-5">{{ consultant.lastname }}</td>
                        <td class="fs-5">{{ consultant.location }}</td>
                        <td class="fs-5">{{ consultant.specialization }}</td>
                        <td class="fs-5">{{ consultant.linkedin }}</td>
                        <td>
                            <a class="btn btn-primary btn fw-bold text-uppercase  mx-2 my-3 rounded-0" href="{{ path('app_consultant_show', {'id': consultant.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewbox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                </svg>
                                Voir</a>
                            <a class="btn btn-primary btn fw-bold text-uppercase  mx-2 my-3 rounded-0" href="{{ path('app_consultant_edit', {'id': consultant.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewbox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>
                                Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Pas de consultant trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary btn fw-bold text-uppercase  mx-2 rounded-0" href="{{ path('app_consultant_new') }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewbox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Nouveau</a>
    </section>
{% endblock %}