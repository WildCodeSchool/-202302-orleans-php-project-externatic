{% extends 'base.html.twig' %}

{% block title %}Consultant
{% endblock %}

{% block body %}
	<section class="container">
		<h1 class="text-primary fw-bold text-uppercase d-flex justify-content-center my-5">Consultant</h1>

		<table class="table">
			<tbody>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Id</th>
					<td class="fs-5">{{ consultant.id }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Prénom</th>
					<td class="fs-5">{{ consultant.firstname }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Nom</th>
					<td class="fs-5">{{ consultant.lastname }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Secteur</th>
					<td class="fs-5">{{ consultant.location }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Spécialisation</th>
					<td class="fs-5">{{ consultant.specialization }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Linkedin</th>
					<td class="fs-5">{{ consultant.linkedin }}</td>
				</tr>
				<tr>
					<th class="text-dark fw-400 text-uppercase fs-5 mx-md-5 mx-0 my-5">Photo</th>
					<td class="fs-5">{{ consultant.poster }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary btn fw-bold text-uppercase my-5 mx-2 rounded-0" href="{{ path('app_consultant_index') }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-skip-backward" viewbox="0 0 16 16">
				<path d="M.5 3.5A.5.5 0 0 1 1 4v3.248l6.267-3.636c.52-.302 1.233.043 1.233.696v2.94l6.267-3.636c.52-.302 1.233.043 1.233.696v7.384c0 .653-.713.998-1.233.696L8.5 8.752v2.94c0 .653-.713.998-1.233.696L1 8.752V12a.5.5 0 0 1-1 0V4a.5.5 0 0 1 .5-.5zm7 1.133L1.696 8 7.5 11.367V4.633zm7.5 0L9.196 8 15 11.367V4.633z"/>
			</svg>
			Revenir à la liste</a>

		<a class="btn btn-primary btn fw-bold text-uppercase  mx-2 rounded-0" href="{{ path('app_consultant_edit', {'id': consultant.id}) }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewbox="0 0 16 16">
				<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
			</svg>
			Modifier</a>

		{{ include('consultant/_delete_form.html.twig') }}
	</section>
{% endblock %}
