{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block stylesheets %}
	{{ parent()}}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	<section class="container-fluid">


		<div class="login row">


			<div class="col-md-8 col-12 d-flex align-items-center justify-content-center align-items-md-center justify-content-md-center bg-secondary">
				<div>

					<h1 class="fw-bold text-uppercase d-flex text-light">Externatic,
						<br>L'entreprise qui répond à vos besoins !</h1>
					{% if error %}
						<div class="fw-bold text-black fs-3 pt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<h2 class="fw-bold text-uppercase d-flex mb-2 h4 mt-5 text-light">Login</h2>

					<form action="{{ path('app_login') }}" method="post">
						<div class="d-flex flex-column">


							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<label class="form-label fw-bold text-light text-uppercase h5" for="username">Email</label>
							<div class="input-group w-75 w-md-50">
								<span class="input-group-text bg-primary">
									{% include 'icons/identifiant.svg' %}
								</span>
								<input type="text" placeholder="exemple@exemple.com" class="form-control" id="username" name="_username" value="{{ last_username }}">
							</div>

							<label class="fw-bold form-label text-light text-uppercase mt-3 h5" for="password">Mot de passe</label>
							<div class="input-group w-75 w-md-50">
								<span class="input-group-text bg-primary">
									{% include 'icons/password.svg' %}
								</span>
								<input type="password" placeholder="Mot de passe" class="form-control" id="password" name="_password">
							</div>

							<button class="w-50 mt-4 btn btn-primary fw-bold text-uppercase" type="submit">Valider</button>
						</div>
					</form>
				</div>
			</div>
			<div class="d-none col-md-4 bg-primary d-md-flex align-items-center">
				<img src="{{ asset('build/images/id_pic.png') }}" class="img-login img-fluid" alt="login">
			</div>
		</section>
	{% endblock %}
	{% block footer %}{% endblock %}
