{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}|| Mes favoris
{% endblock %}

{% block body %}
	<section class="container-xl">

			<h1 class="fw-bold text-dark text-uppercase my-5">Avec
			<span class="text-primary">
				Externatic</span>,<br>
			Retrouvez vos offres préférées !</h1>

		<div class="row g-5 mb-5">
			{% for jobOffer in app.user.candidate.favorites %}
				{% include '/components/jobOffer-card.html.twig' %}
			{% else %}
				<p class="my-5 fw-bold text-primary fs-4">Aucune offre mise en favoris n'a été détectée.</p>
			{% endfor %}
		</div>
	</section>
{% endblock %}
