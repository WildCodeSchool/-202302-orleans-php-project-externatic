{% extends 'base.html.twig' %}

{% block title %}BusinessCard index{% endblock %}

{% block body %}
    <h1>BusinessCard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for business_card in business_cards %}
            <tr>
                <td>{{ business_card.id }}</td>
                <td>{{ business_card.name }}</td>
                <td>{{ business_card.link }}</td>
                <td>
                    <a href="{{ path('app_business_card_show', {'id': business_card.id}) }}">show</a>
                    <a href="{{ path('app_business_card_edit', {'id': business_card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_business_card_new') }}">Create new</a>
{% endblock %}
