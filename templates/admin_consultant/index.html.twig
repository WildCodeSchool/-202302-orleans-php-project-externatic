{% extends 'base-admin.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('adminConsultant') }}
{% endblock %}

{% block title %}Offres d'emploi
{% endblock %}
{% block body %}
	<h1 class="fw-bold text-dark text-uppercase my-5">
		<span class="text-primary">
			les</span>
		offres d’emlpoi</h1>
	<h2 class="text-light text-uppercase fw-bold text-center bg-primary m-5 p-5">Trier les offres d'emplois</h2>
	<section class="container">
		<div class="col-6">

			<div class="row g-5 mb-5">
				{% for jobOffer in jobOffers %}
					<div class="col-12">

						<div class="card bg-transparent border-dark shadow">
							<div class="card-body">

								<h2 class="jobOffer fw-bold text-dark text-center text-uppercase mb-4 mt-3">
									{{ jobOffer.job }}
								</h2>
								<div class="container mx-4">
									<h4 class="fw-bold text-dark text-uppercase mx-2">
										{{ jobOffer.entreprise }}
									</h4>
									<div class="d-flex">
										{% include 'icons/contract.svg' %}
										<h4 class="fw-bold text-dark ">{{ jobOffer.contract }}</h4>
									</div>
									<div class="d-flex">
										{% include 'icons/location.svg' %}
										<h4 class="fst-italic fw-bold text-dark">
											{{ jobOffer.city }}</h4>
									</div>
								</div>
								<h5 class="fw-bold fs-6 text-primary opacity-75 text-end mb-4 mx-5">
									{% set now = "now"|date("Y-m-d") %}
									{% set createdAt = jobOffer.createdAt|date("Y-m-d") %}

								</h5>
								<div class="container">
									<button type="button" class="btn col-12 col-btn-sm btn-transparent border-dark mt-3">
										<a class="text-dark text-decoration-none fs-4 fw-bold" href="{{ path("jobOffer_index", { id: jobOffer.id}) }}">VOIR +</a>
									</button>
									<div class="bouton d-flex justify-content-between">
										<button type="button" class="btn col-3 col-btn-sm btn-transparent border-dark my-3">
											<a class="text-dark text-decoration-none fs-4 fw-bold">
												{% include 'icons/people.svg' %}
												20</a>
										</button>
										<button type="button" class="btn col-8 col-btn-sm btn-transparent border-dark my-3">
											<a class="text-dark text-decoration-none fs-4 fw-bold" href="{{ path("jobOffer_index", { id: jobOffer.id}) }}">PROFILS INTÉRESSÉS</a>
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% else %}
					Aucune offre trouvée.
				{% endfor %}
			</div>
			<div class="col-6">
				{% for jobOffer in jobOffers %}
					<div class="col-12">

						<div class="card bg-transparent border-dark shadow">
							<div class="card-body">
								<p class="d-block fs-5 text-dark fw-medium my-3">{{ jobOffer.description }}</p>
							{% else %}
								Aucune offre trouvée.
							{% endfor %}
						</div>
					</div>
				</div>
			</section>
		{% endblock %}
