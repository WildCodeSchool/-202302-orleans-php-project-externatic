{% extends 'base-admin.html.twig' %}

{% block title %}Voir || Offres d'emplois
{% endblock %}

{% block body %}
	<h1>JobOffer</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Poste</th>
				<td>{{ jobOffer.job }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ jobOffer.city }}</td>
			</tr>
			<tr>
				<th>Contrat</th>
				<td>{{ jobOffer.contract }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ jobOffer.description }}</td>
			</tr>
			<tr>
				<th>Date d'ajout</th>
				<td>{{ jobOffer.createdAt ? jobOffer.createdAt|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ jobOffer.phone }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-secondary btn fw-bold text-uppercase my-2 px-3 rounded-10" href="{{ path('admin_jobOffer_index') }}">
		{% include 'icons/door.svg'%}
		Revenir à la liste des offres
	</a>
	{{ include('admin_jobOffer/_delete_form.html.twig') }}
{% endblock %}
